
<div class="card-category py-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(' <%= asset_path 'drink.jpg' %> ');">
<h1> Welcome! </h1>
</div>

<div class="container my-3 px-3">
  <div class="row">
    <% @cocktails.each do |c|  %>
    <div class="col-sm-4">
      <div class="card mb-3" style="width: 14rem;">
          <% if c.photo.attached? %>
            <%= cl_image_tag(c.photo.key) %>
          <% else %>
            <%= cl_image_tag("mojito_uifng7") %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"> <%= c.name %> </h5>
            <p> <%= link_to "Read about it!", cocktail_path(c), class: "btn btn-info"%> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

